{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020",
            "esnext.asynciterable"
        ],
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "allowJs": true,
        // Generate d.ts files
        "declaration": true,
        "outDir": "dist",
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/test",
        "src/migrations"
    ]
}